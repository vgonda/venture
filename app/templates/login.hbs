<div class="container">
  <div class="row">
    <div class="jumbotron">
    <h1>Login to Venture!</h1>
      <div class="input-group">
        {{input type="text" valueBinding=identification class="form-control" id="email" placeholder="Email"}}
        {{input type="password" valueBinding=password class="form-control" id="password" placeholder="Password"}}
        <button class="btn btn-default" type="button" {{ action 'authenticate' }}>Login</button>
      </div>
    </div>
  </div>
</div>